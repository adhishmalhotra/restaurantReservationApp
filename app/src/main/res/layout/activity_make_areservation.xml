<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeAReservation"
    android:background="@drawable/backgrundimage">

    <TextView
        android:id="@+id/reservationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Make A Reservation"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/partyTitle"
        android:layout_below="@+id/reservationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party Size"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:padding="20dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partyTitle"
        android:background="#30ffffff"
        android:id="@+id/partySize"
        android:textSize="20dp"
        android:padding="20dp"
        />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partySize"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="20dp"
        android:hint="Select Date"
        android:inputType="date"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_below="@+id/date"
        android:background="#30ffffff"
        android:hint="Select Time"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="20dp"
        android:inputType="time"/>

    <TextView
        android:id="@+id/seatingTypeLabel"
        android:layout_below="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seating Type"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:padding="20dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seatingTypeLabel"
        android:background="#30ffffff"
        android:id="@+id/seatingType"
        android:textSize="20dp"
        android:padding="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notes"
        android:layout_below="@+id/seatingType"
        android:background="#30ffffff"
        android:hint="Special Requests"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_notes"
        android:drawablePadding="20dp"
        android:inputType="text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextReview"
        android:layout_below="@+id/notes"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:backgroundTint="#90B0ED"
        android:padding="5dp"
        android:text="Next"
        android:textSize="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notes"
        android:layout_margin="20dp"
        android:backgroundTint="#90B0ED"
        android:padding="5dp"
        android:id="@+id/previousPage"
        android:text="Previous"
        android:textSize="20dp" />

</RelativeLayout>